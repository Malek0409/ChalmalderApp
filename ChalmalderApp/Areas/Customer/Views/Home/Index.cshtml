@model IEnumerable<Product>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-4">
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card shadow-sm h-100 d-flex flex-column">
                    <img src="@product.ImageUrl" class="card-img-top pt-3" alt="@product.Title" style="height: 250px; width: 100%; object-fit: contain;">

                    <div class="card-body d-flex flex-column justify-content-center align-items-center text-center flex-grow-1">
                        <h5 class="card-title text-uppercase">@product.Title</h5>
                        <p class="card-text text-muted mb-1">by <span class="fw-bold text-warning">@product.Author</span></p>
                        <p class="card-text mb-1">
                            List Price: <span class="text-decoration-line-through text-muted">$@product.ListPrice.ToString("0.00")</span>
                        </p>
                        <p class="card-text">
                            As low as: <span class="fw-bold">$@product.Price.ToString("0.00")</span>
                        </p>
                    </div>

                    <div class="card-footer bg-transparent border-0">
                        <a asp-action="Details" asp-route-productId="@product.Id" class="btn btn-dark w-100">DETAILS</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
